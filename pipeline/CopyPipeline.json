{
	"name": "CopyPipeline",
	"properties": {
		"activities": [
			{
				"name": "CopyFromBlobToSql",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFolderPath": "*",
							"wildcardFileName": "*.json"
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "SqlServerSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['payload'][0]['product']['productId']['productId']"
								},
								"sink": {
									"name": "productId",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['payload'][0]['product']['productName']"
								},
								"sink": {
									"name": "productName",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['payload'][0]['product']['shortDescription']"
								},
								"sink": {
									"name": "shortDescription",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "$['payload'][0]['product']['longDescription']"
								},
								"sink": {
									"name": "longDescription",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "SourceBlobDataset",
						"type": "DatasetReference",
						"parameters": {
							"FileName": "\"@pipeline().parameters.FileName\"",
							"StoreId": "\"@pipeline().parameters.StoreId\"",
							"FilePath": "\"@pipeline().parameters.FilePath\""
						}
					}
				],
				"outputs": [
					{
						"referenceName": "OutputSqlDataset",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}